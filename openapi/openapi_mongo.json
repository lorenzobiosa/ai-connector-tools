{
    "openapi": "3.0.3",
    "info": {
        "title": "Mongo Exec API",
        "version": "3.2.0",
        "description": "API per eseguire comandi MongoDB senza guardrail lato server. Nessuna credenziale nel payload; l'host e le porte possono essere passati nel body per override. L'autenticazione è selezionata dal backend in base a MONGO_AUTH_PREFERENCE (userpass|uri|auto)."
    },
    "servers": [
        {
            "url": "https://<APP>.azurewebsites.net"
        }
    ],
    "paths": {
        "/mongo/exec?code=<FUNCTION_KEY>": {
            "post": {
                "summary": "Esecuzione remota di comandi MongoDB",
                "operationId": "mongoExec",
                "security": [
                    {
                        "function_key": []
                    }
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Function key alternativa all'header x-functions-key"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "database",
                                    "command"
                                ],
                                "properties": {
                                    "database": {
                                        "type": "string",
                                        "description": "Nome database"
                                    },
                                    "host": {
                                        "type": "string",
                                        "description": "Hostname o lista separata da virgole (override facoltativo)"
                                    },
                                    "ports": {
                                        "type": "string",
                                        "description": "Porta o lista separata da virgole (override; solo schema 'mongodb')"
                                    },
                                    "command": {
                                        "description": "Comando MongoDB da eseguire. Se è un oggetto privo di 'target' e 'name', viene passato a db.command(obj). In alternativa, invocazione generica: {target:'client|db|collection', name:'<metodo>', collection?:'<nome>', args?:[], kwargs?:{}}.",
                                        "oneOf": [
                                            {
                                                "type": "object"
                                            },
                                            {
                                                "type": "string"
                                            }
                                        ]
                                    },
                                    "timeout_sec": {
                                        "type": "number",
                                        "default": 120
                                    },
                                    "correlation_id": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "db_command_ping": {
                                    "summary": "db.command — ping",
                                    "value": {
                                        "database": "admin",
                                        "host": "snmn9050d01-pl-0.gvuh8x.mongodb.net",
                                        "ports": "27017,27018",
                                        "command": {
                                            "ping": 1
                                        },
                                        "timeout_sec": 20
                                    }
                                },
                                "generic_find": {
                                    "summary": "Invocazione generica — collection.find",
                                    "value": {
                                        "database": "appdb",
                                        "host": "mongo.internal",
                                        "ports": "27017",
                                        "command": {
                                            "target": "collection",
                                            "collection": "users",
                                            "name": "find",
                                            "args": [
                                                {
                                                    "active": true
                                                },
                                                {
                                                    "projection": {
                                                        "password": 0
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Comando eseguito con successo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "description": "Risultato del comando (cursor materializzato; write results serializzati)",
                                            "oneOf": [
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object"
                                                    }
                                                },
                                                {
                                                    "type": "object"
                                                },
                                                {
                                                    "type": "number"
                                                },
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "boolean"
                                                }
                                            ]
                                        },
                                        "auth_mode": {
                                            "type": "string",
                                            "enum": [
                                                "userpass",
                                                "uri"
                                            ]
                                        },
                                        "scheme": {
                                            "type": "string",
                                            "enum": [
                                                "mongodb",
                                                "mongodb+srv"
                                            ]
                                        },
                                        "host": {
                                            "type": "string",
                                            "description": "Host effettivo usato (con porte applicate dove rilevante)"
                                        },
                                        "request_id": {
                                            "type": "string"
                                        },
                                        "correlation_id": {
                                            "type": "string"
                                        },
                                        "executed": {
                                            "type": "object",
                                            "description": "Dettagli essenziali dell'esecuzione (mode, target, name)"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Errore di validazione o selezione credenziali"
                    },
                    "500": {
                        "description": "Errore runtime o dipendenze mancanti"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "function_key": {
                "type": "apiKey",
                "name": "x-functions-key",
                "in": "header"
            }
        }
    }
}