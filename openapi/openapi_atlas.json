{
    "openapi": "3.0.3",
    "info": {
        "title": "Atlas Exec API",
        "version": "1.2.0",
        "description": "API per eseguire comandi MongoDB Atlas CLI in modalità sicura.\n- Nessuna credenziale nel payload: API Key lette da Azure Key Vault e iniettate come variabili d'ambiente.\n- Metodo di autenticazione predefinito: `api_key`. È possibile usare `profile` se esplicitato.\n- Tutte le opzioni CLI (incluso `--output`) devono essere fornite dal chiamante.\n- Il `projectId`, quando richiesto dal comando, deve essere fornito dal chiamante (es. `--projectId` o configurando `MONGODB_ATLAS_PROJECT_ID`)."
    },
    "servers": [
        {
            "url": "https://<APP>.azurewebsites.net"
        }
    ],
    "paths": {
        "/atlas/exec?code=<FUNCTION_KEY>": {
            "post": {
                "summary": "Esecuzione remota di comandi Atlas CLI",
                "operationId": "atlasExec",
                "description": "Invoca la Function per eseguire un comando Atlas CLI. Le credenziali sono gestite tramite Key Vault e non devono essere incluse nel payload. Nessun parametro viene aggiunto automaticamente: il comando è passato tal quale.",
                "security": [
                    {
                        "function_key": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AtlasExecRequest"
                            },
                            "examples": {
                                "ClustersList": {
                                    "summary": "clusters list con projectId",
                                    "value": {
                                        "command": "clusters list --projectId 5e2211c17a3e5a48f5497de3 --output json",
                                        "auth_method": "api_key",
                                        "timeout_sec": 60
                                    }
                                },
                                "ProjectsList": {
                                    "summary": "projects list",
                                    "value": {
                                        "command": "projects list --output json",
                                        "auth_method": "api_key",
                                        "timeout_sec": 30
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Comando Atlas CLI eseguito con successo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AtlasExecResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Richiesta non valida o comando Atlas terminato con exit code != 0",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "408": {
                        "description": "Timeout comando Atlas CLI",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AtlasExecResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Errore imprevisto durante l'esecuzione; il messaggio originale è esposto per analisi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AtlasExecResponse"
                                }
                            }
                        }
                    },
                    "502": {
                        "description": "Errore infrastrutturale (installazione CLI o Key Vault)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "function_key": {
                "type": "apiKey",
                "name": "x-functions-key",
                "in": "header"
            }
        },
        "schemas": {
            "AtlasExecRequest": {
                "type": "object",
                "required": [
                    "command"
                ],
                "properties": {
                    "command": {
                        "type": "string",
                        "description": "Comando Atlas CLI da eseguire (es. 'clusters list'). Tutte le opzioni devono essere incluse dal chiamante."
                    },
                    "auth_method": {
                        "type": "string",
                        "enum": [
                            "auto",
                            "api_key",
                            "profile"
                        ],
                        "default": "api_key",
                        "description": "Metodo di autenticazione preferito. Default=api_key (API Key da Key Vault)."
                    },
                    "profile": {
                        "type": "string",
                        "nullable": true,
                        "description": "Nome profilo Atlas CLI (usato solo se auth_method=profile)"
                    },
                    "timeout_sec": {
                        "type": "number",
                        "default": 120,
                        "description": "Timeout in secondi per l'esecuzione del comando"
                    },
                    "correlation_id": {
                        "type": "string",
                        "nullable": true,
                        "description": "Correlation ID opzionale per tracciamento"
                    }
                }
            },
            "AtlasExecResponse": {
                "type": "object",
                "properties": {
                    "command_executed": {
                        "type": "string"
                    },
                    "argv_executed": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "auth_mode": {
                        "type": "string"
                    },
                    "profile_used": {
                        "type": "string"
                    },
                    "exit_status": {
                        "type": "integer",
                        "nullable": true
                    },
                    "stdout": {
                        "type": "string"
                    },
                    "stderr": {
                        "type": "string"
                    },
                    "started_at": {
                        "type": "number"
                    },
                    "finished_at": {
                        "type": "number"
                    },
                    "duration_ms": {
                        "type": "integer"
                    },
                    "request_id": {
                        "type": "string"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "request_id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}